<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('errors.template.header', :model => Product.model_name.human, :count => @product.errors.count) %>:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label Product.human_attribute_name("product_name") %><br>
    <%= f.text_field :product_name %>
  </div>
  <div class="field">
    <%= f.label Product.human_attribute_name("description")  %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label Product.human_attribute_name("category") %><br>
    <%= f.text_field :category %>
  </div>  
  <div class="field">
    <%= f.label Product.human_attribute_name("added_at") %><br>
    <%= f.datetime_select :added_at %>
  </div>
  <div class="field">
    <%= f.label Product.human_attribute_name("manufacturer") %><br>
    <%= f.text_field :manufacturer %>
  </div>
  <div class="field">
    <%= f.label Product.human_attribute_name("stock") %><br>
    <%= f.number_field :stock %>
  </div>
  <div class="field">
    <%= f.label Product.human_attribute_name("price")  %><br>
    <%= f.number_field :price %>
  </div>  
  <div class="actions">
    <%= f.submit t("menu.save"), :class => 'btn btn-product'%>
  </div>
<% end %>
