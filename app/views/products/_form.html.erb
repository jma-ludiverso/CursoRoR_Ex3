<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> <%= t "messages.saveerror.product"%>:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t("product.fields.product") %><br>
    <%= f.text_field :product_name %>
  </div>
  <div class="field">
    <%= f.label t("product.fields.description")  %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label t("product.fields.category")  %><br>
    <%= f.text_field :category %>
  </div>  
  <div class="field">
    <%= f.label t("product.fields.addedat")  %><br>
    <%= f.datetime_select :added_at %>
  </div>
  <div class="field">
    <%= f.label t("product.fields.manufacturer")  %><br>
    <%= f.text_field :manufacturer %>
  </div>
  <div class="field">
    <%= f.label t("product.fields.stock")  %><br>
    <%= f.number_field :stock %>
  </div>
  <div class="field">
    <%= f.label t("product.fields.price")  %><br>
    <%= f.number_field :price %>
  </div>  
  <div class="actions">
    <%= f.submit t("menu.save"), :class => 'btn btn-product'%>
  </div>
<% end %>
