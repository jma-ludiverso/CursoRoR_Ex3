<form action="<%= products_path %>" method="get" >
  <div class="searchbox">
    <h4><%= t("product.search") %></h4>
    <table>
      <tr>
        <td>
          <div class="field">
            <%= label_tag(Product.human_attribute_name("category")) %>:
          </div>
        </td>        
        <td>
          <div class="field">
            <input type="text" name="category" value="<%= params[:category] %>">
          </div>
        </td>
        <td>
          <div class="field">
            <%= label_tag(Product.human_attribute_name("stock")) %>:
          </div>
        </td>        
        <td>
          <div class="field">
            <input type="text" name="stock" value="<%= params[:stock] %>">
          </div>
        </td>
        <td>
          <div class="field">
            <%= label_tag(Product.human_attribute_name("manufacturer")) %>:
          </div>
        </td>                  
        <td>
          <div class="field">
            <input type="text" name="manufacturer" value="<%= params[:manufacturer] %>">
          </div>
        </td>          
      </tr>
      <tr>
        <td>
          <div class="field">
            <%= label_tag(Product.human_attribute_name("added_at")) %>:
          </div>
        </td>                
        <td>
          <div class="field">
            <input type="date" name="date1" value="<%= params[:date1] %>">
          </div>
        </td>        
        <td align="center">
          <div class="field">
            <%= label_tag(t("product.searchrange")) %>
          </div>
        </td>        
        <td>
          <div class="field">
            <input type="date" name="date2" value="<%= params[:date2] %>">
          </div>
        </td>        
        <td colspan="2">&nbsp;</td>
      </tr>
      <tr>
        <td>
          <div class="field">
            <%= label_tag(Product.human_attribute_name("price")) %>:
          </div>
        </td>        
        <td>
          <div class="field">
            <input type="number" name="price1" value="<%= params[:price1] %>">
          </div>
        </td>
        <td align="center">
          <div class="field">
            <%= label_tag(t("product.searchrange")) %>
          </div>
        </td>                        
        <td>
          <div class="field">
            <input type="number" name="price2" value="<%= params[:price2] %>">
          </div>
        </td>        
        <td colspan="2">&nbsp;</td>
      </tr>      
      <tr>
        <td colspan="6" align="right">
          <%= submit_tag t("product.search"), :class => 'btn btn-product'%>
        </td>
      </tr>
    </table>
  </div>
</form>
