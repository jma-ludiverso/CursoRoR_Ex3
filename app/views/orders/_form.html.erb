<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> <%= t "messages.saveerror.order"%>:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if params[:action] == "edit" %>
    <div class="field">
      <%= f.label t("order.fields.status") %><br>
      <%= f.text_field :order_status %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t("order.fields.payment") %><br>
    <%= f.text_field :payment_method %>
  </div>
  <div class="field">
    <%= f.label t("order.fields.deliveryadd") %><br>
    <%= f.text_field :delivery_address %>
  </div>
  <div class="field">
    <%= f.label t("order.fields.deliverycity") %><br>
    <%= f.text_field :delivery_city %>
  </div>
  <div class="field">
    <%= f.label t("order.fields.customername") %><br>
    <%= f.text_field :customer_name %>
  </div>
  <div class="field">
    <%= f.label t("order.fields.customersurname") %><br>
    <%= f.text_field :customer_surname %>
  </div>
  <div>
    <table class="items_table">
      <tr class="orderrow">
          <th colspan="3"><%= t "order.orderproducts"%></th>
      </tr>      
      <tr class="orderrow">
        <th><%= t "product.fields.product"%></th>
        <th><%= t "product.fields.quantity"%></th>
        <th><%= t "menu.actions"%></th>
      </tr>
      <%= f.fields_for :line_items do |builder| %>
        <%= render 'line_item_fields', :f => builder %>
      <% end %>       
      <tr><td colspan="3"><%= link_to_add_fields t("order.newline"), f, :line_items %></td></tr>      
    </table>
  </div>
  <div class="actions">
    <%= f.submit t("menu.save"), :class => 'btn btn-order'%>
  </div>
<% end %>
