<div class="orderview">
  <h1>Listing orders</h1>
</div>

<table class="items_table">
  <thead>
    <tr class="orderrow">
      <th>Order status</th>
      <th>Payment method</th>
      <th>Delivery address</th>
      <th>Delivery city</th>
      <th>Customer name</th>
      <th>Customer surname</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_status %></td>
        <td><%= order.payment_method %></td>
        <td><%= order.delivery_address %></td>
        <td><%= order.delivery_city %></td>
        <td><%= order.customer_name %></td>
        <td><%= order.customer_surname %></td>
        <td class="centercell"><%= link_to 'Show', order %></td>
        <td class="centercell"><%= link_to 'Edit', edit_order_path(order) %></td>
        <td class="centercell"><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="btn btn-order">
  <%= link_to 'New Order', new_order_path %>
</div>
<br>
<div class="btn btn-product">
  <%= link_to 'New Product', new_product_path %>
</div>
<div class="btn btn-product">
  <%= link_to 'Products', products_path %>
</div>