<div class="orderview">
  <h1><%= t "order.list"%></h1>
</div>

<table class="items_table">
  <thead>
    <tr class="orderrow">
      <th><%= t "order.fields.status"%></th>
      <th><%= t "order.fields.payment"%></th>
      <th><%= t "order.fields.deliveryadd"%></th>
      <th><%= t "order.fields.deliverycity"%></th>
      <th><%= t "order.fields.customername"%></th>
      <th><%= t "order.fields.customersurname"%></th>
      <th colspan="3"><%= t "menu.actions"%></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_status %></td>
        <td><%= order.payment_method %></td>
        <td><%= order.delivery_address %></td>
        <td><%= order.delivery_city %></td>
        <td><%= order.customer_name %></td>
        <td><%= order.customer_surname %></td>
        <td class="centercell"><%= link_to t("menu.show"), order_path(id: order.id) %></td>
        <td class="centercell"><%= link_to t("menu.edit"), edit_order_path(id: order.id) %></td>
        <td class="centercell"><%= link_to t("menu.destroy"), order_path(id: order.id), method: :delete, data: { confirm: t("messages.destroy") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="btn btn-order">
  <%= link_to t("menu.neworder"), new_order_path %>
</div>
<br>
<div class="btn btn-product">
  <%= link_to t("menu.newproduct"), new_product_path %>
</div>
<div class="btn btn-product">
  <%= link_to t("menu.products"), products_path %>
</div>